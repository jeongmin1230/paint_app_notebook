<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/red"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#ff0000"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/orange"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#FFAB40"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/yellow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#FFFF00"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#64DD17"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#37AFF8"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/indigo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#304FFE"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/purple"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#5900FF"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/pink"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#FF00BF"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/white"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="#FBF8F8"
            android:onClick="onClick" />

        <TextView
            android:id="@+id/black"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#000000"
            android:onClick="onClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F4C3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:id="@+id/paintArea" >


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:id="@+id/ll3" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnThicknessPen"
            android:layout_marginRight="40dp"
            android:onClick="onClickPenDialog"
            android:textSize="20dp"
            android:fontFamily="@font/garam_lotus"
            android:backgroundTint="#EDE7F6"
            android:textColor="@color/black"
            android:text="펜 굵기" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:textSize="20dp"
            android:fontFamily="@font/garam_lotus"
            android:text="이미지 저장"
            android:backgroundTint="#EDE7F6"
            android:textColor="@color/black"
            android:onClick="onClickSave"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnThicknessEraser"
            android:onClick="onClickEraserDialog"
            android:textSize="20dp"
            android:backgroundTint="#EDE7F6"
            android:textColor="@color/black"
            android:fontFamily="@font/garam_lotus"
            android:text="지우개" />

    </LinearLayout>
</LinearLayout>